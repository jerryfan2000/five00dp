<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/commentUserPhotoView"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/ic_userpic" />

    <TextView
        android:id="@+id/commentUserNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/commentUserPhotoView"
        android:text="User Name"
        android:textStyle="bold"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/commentBodyView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/commentUserNameView"
        android:layout_below="@+id/commentUserNameView"
        android:text="Comment Body"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/likeCountView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/commentBodyView"
        android:layout_alignParentRight="true"
        android:textColor="#979797"
        android:text="0"
        android:textSize="8sp" />
    
    <ImageView
        android:id="@+id/likeImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/commentBodyView"
        android:layout_toLeftOf="@+id/likeCountView"
        android:src="@drawable/ic_heart" />

</RelativeLayout>